def Sdentry():
    mydb=mq.connect(host="localhost",user="root",password="12345",database="cbse24",auth_plugin='mysql_native_password')
    myc=mydb.cursor()
    sid=input("Enter your Student-ID ")
    name=input("Enter your name ")
    clas=input("Enter the suject you are expertised in ")
    con=int(input("Enter your contact no. "))
    info="INSERT into Sdetails values ('{}','{}','{}','{}','{}','{}','{}')".format(sid,name,clas,con)
    myc.execute(info)
    myc.execute("commit")
    myc.close()